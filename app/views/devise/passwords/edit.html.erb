<h2 class="title is-4">Cambiar tu contraseña</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <label class="label"><%= f.label :password, "Nueva contraseña" %></label>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mínimo)</em><br />
    <% end %>
    <div class="control">
      <%= f.password_field :password, class: "input", autofocus: true, autocomplete: "new-password", placeholder: "Ingresa tu nueva contraseña" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= f.label :password_confirmation, "Confirmar nueva contraseña" %></label>
    <div class="control">
      <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password", placeholder: "Confirma tu nueva contraseña" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Cambiar mi contraseña", class: "button is-primary" %>
    </div>
  </div>
<% end %>


