<h2 class="title is-4">¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="label"><%= f.label :email %></label>
    <div class="control">
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email", placeholder: "Ingresa tu email" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit "Enviar instrucciones de restablecimiento de contraseña", class: "button is-primary" %>
    </div>
  </div>
<% end %>

