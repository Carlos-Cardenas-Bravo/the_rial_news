<h2 class="title is-4">Iniciar Sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'box' }) do |f| %>

  <div class="field">
    <label class="label"><%= f.label :email %></label>
    <div class="control">
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= f.label :password %></label>
    <div class="control">
      <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <label class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
  <% end %>

  <div class="field">
    <div class="control">
      <%= f.submit "Iniciar Sesión", class: "button is-primary" %>
    </div>
  </div>
<% end %>

<%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, class: "is-size-6" %>

