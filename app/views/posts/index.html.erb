<% content_for :title, "Posts" %>
<section class="section">
  <div class="container">

    <h1 class="title">Posts</h1>

    <div id="posts">
      <% @posts.each do |post| %>
        <%= render partial: 'post', locals: { post: post, mostrar_comentarios: false } %>
        <p>
          <%= link_to "Ir al post", post, class: "button is-light" %>
        </p>
      <% end %>
    </div>

    <% if current_user&.admin? %>
      <%= link_to 'Nuevo Post', new_post_path, class: "button is-light" %>
    <% end %>
  </div>
</section>

<%== pagy_nav(@pagy) if @pagy.pages > 1 %>